{
  "name": "kip",
  "displayName": "Kip",
  "description": "Language support for Kip with LSP features and procedural type highlighting.",
  "version": "0.1.0",
  "publisher": "kip",
  "author": {
    "name": "Kip Contributors",
    "email": "joomy@type.systems"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kip-dili/kip.git"
  },
  "homepage": "https://github.com/kip-dili/kip/tree/main/vscode-plugin",
  "bugs": {
    "url": "https://github.com/kip-dili/kip/issues"
  },
  "icon": "media/icon.png",
  "keywords": [
    "kip",
    "programming-language",
    "lsp",
    "turkish",
    "type-system"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:kip",
    "onCommand:kip.showOutput",
    "onCommand:kip.restartLanguageServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kip",
        "aliases": [
          "Kip",
          "kip"
        ],
        "extensions": [
          ".kip"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.kip": "kip"
      },
      "[kip]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.allowedCharacters": {
          "ı": true,
          "İ": true
        }
      }
    },
    "grammars": [
      {
        "language": "kip",
        "scopeName": "source.kip",
        "path": "./syntaxes/kip.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "kip.goToDefinition",
        "title": "Go to Definition",
        "category": "Kip"
      },
      {
        "command": "kip.goToTypeDefinition",
        "title": "Go to Type Definition",
        "category": "Kip"
      },
      {
        "command": "kip.showOutput",
        "title": "Show Output",
        "category": "Kip"
      },
      {
        "command": "kip.restartLanguageServer",
        "title": "Restart Language Server",
        "category": "Kip"
      }
    ],
    "configuration": {
      "title": "Kip",
      "properties": {
        "kip.languageServerPath": {
          "type": "string",
          "default": "kip-lsp",
          "description": "Path to the kip-lsp executable. If left as default, the extension also checks ~/.local/bin, ~/.cabal/bin, and ~/.stack/bin."
        },
        "kip.languageServerArgs": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Arguments passed to kip-lsp."
        },
        "kip.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace LSP communication to the Kip output channel."
        },
        "kip.proceduralTypeHighlight.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable local procedural type highlighting (no LSP semantic tokens)."
        },
        "kip.proceduralTypeHighlight.maxDocumentChars": {
          "type": "number",
          "default": 200000,
          "minimum": 1000,
          "description": "Skip procedural type highlighting for files above this character count."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "npm run compile && vsce package",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.84.0",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
