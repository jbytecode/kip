{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kip",
  "scopeName": "source.kip",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.kip",
          "begin": "\\(\\*",
          "end": "\\*\\)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kip",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kip",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.kip meta.suffix.kip",
          "match": "(?<=\")'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kip",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?(?='|[\\s,;.)]|$)"
        },
        {
          "name": "constant.numeric.kip meta.suffix.kip",
          "match": "(?<=[0-9])'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.kip",
          "match": "\\b(?:Bir|bir|yerleşik|yerleşiktir|olsun)\\b"
        },
        {
          "name": "keyword.control.kip",
          "match": "\\bya\\s+da\\b"
        },
        {
          "name": "keyword.control.kip",
          "match": "\\b(?:ya|da|olabilir|var|olamaz|değilse|için|olarak|dersek)\\b"
        },
        {
          "name": "keyword.control.kip",
          "match": "[,.]"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "meta.type.declaration.bir.kip",
          "begin": "\\bBir\\b",
          "beginCaptures": {
            "0": {
              "name": "keyword.declaration.kip"
            }
          },
          "end": "\\bya\\b",
          "endCaptures": {
            "0": {
              "name": "keyword.control.kip"
            }
          },
          "patterns": [
            {
              "name": "entity.name.type.kip",
              "match": "(?!(?:Bir|bir|ya|da|olabilir|var|olamaz|değilse|yazdır|için|olarak|dersek|yerleşik|yerleşiktir|olsun)\\b)[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?"
            }
          ]
        },
        {
          "name": "meta.type.declaration.primitive.kip",
          "begin": "\\bBir\\b",
          "beginCaptures": {
            "0": {
              "name": "keyword.declaration.kip"
            }
          },
          "end": "\\bolsun\\b",
          "endCaptures": {
            "0": {
              "name": "keyword.declaration.kip"
            }
          },
          "patterns": [
            {
              "name": "entity.name.type.kip",
              "match": "(?!(?:Bir|bir|ya|da|olabilir|var|olamaz|değilse|yazdır|için|olarak|dersek|yerleşik|yerleşiktir|olsun)\\b)[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?"
            }
          ]
        },
        {
          "name": "meta.type.declaration.alt.kip",
          "begin": "\\bya\\s+bir\\b",
          "beginCaptures": {
            "0": {
              "name": "keyword.control.kip"
            }
          },
          "end": "\\bya\\b",
          "endCaptures": {
            "0": {
              "name": "keyword.control.kip"
            }
          },
          "patterns": [
            {
              "name": "entity.name.type.kip",
              "match": "(?!(?:Bir|bir|ya|da|olabilir|var|olamaz|değilse|yazdır|için|olarak|dersek|yerleşik|yerleşiktir|olsun)\\b)[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?"
            }
          ]
        },
        {
          "name": "meta.type.union.kip",
          "begin": "\\bya(?:\\s+da)?\\b",
          "beginCaptures": {
            "0": {
              "name": "keyword.control.kip"
            }
          },
          "end": "\\b(?:ya|olabilir)\\b",
          "endCaptures": {
            "0": {
              "name": "keyword.control.kip"
            }
          },
          "patterns": [
            {
              "name": "entity.name.type.kip",
              "match": "(?!(?:Bir|bir|ya|da|olabilir|var|olamaz|değilse|yazdır|için|olarak|dersek|yerleşik|yerleşiktir|olsun)\\b)[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?"
            }
          ]
        },
        {
          "name": "meta.type.ascription.kip",
          "match": "(?!(?:Bir|bir|ya|da|olabilir|var|olamaz|değilse|yazdır|için|olarak|dersek|yerleşik|yerleşiktir|olsun)\\b)[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?(?=\\s+(?:(?!(?:Bir|bir|ya|da|olabilir|var|olamaz|değilse|yazdır|için|olarak|dersek|yerleşik|yerleşiktir|olsun)\\b)[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?\\s+)*olarak\\b)",
          "captures": {
            "0": {
              "name": "entity.name.type.kip"
            }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.kip",
          "match": "[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?(?:se|sa|yse|ysa)?(?='|[\\s,;.()]|$)"
        }
      ]
    }
  }
}
