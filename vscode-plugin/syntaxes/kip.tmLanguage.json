{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kip",
  "scopeName": "source.kip",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#boolean-literals" },
    { "include": "#keywords" },
    { "include": "#constructors" },
    { "include": "#types" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.kip",
          "begin": "\\(\\*",
          "end": "\\*\\)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kip",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kip",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.kip meta.suffix.kip",
          "match": "(?<=\")'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kip",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?(?='|[\\s,;.)]|$)"
        },
        {
          "name": "constant.numeric.kip meta.suffix.kip",
          "match": "(?<=[0-9])'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "boolean-literals": {
      "patterns": [
        {
          "name": "constant.language.boolean.kip",
          "match": "\\b(?:doğru|yanlış)(?='|[\\s,;.)]|$)"
        },
        {
          "name": "constant.language.boolean.kip meta.suffix.kip",
          "match": "(?<=doğru|yanlış)'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.kip",
          "match": "\\b(?:Bir|yerleşiktir)\\b"
        },
        {
          "name": "keyword.control.kip",
          "match": "\\bya\\s+da\\b"
        },
        {
          "name": "keyword.control.kip",
          "match": "\\b(?:ya|olabilir|var|için|olarak|dersek)\\b"
        },
        {
          "name": "keyword.control.conditional.kip",
          "match": "\\b[\\p{Ll}\\p{M}]+(?:-[\\p{L}\\p{M}]+)*(?:se|sa|yse|ysa)(?='|[\\s,;.)]|$)"
        },
        {
          "name": "keyword.control.conditional.kip meta.suffix.kip",
          "match": "(?<=se|sa|yse|ysa)'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "constructors": {
      "patterns": [
        {
          "name": "constant.other.constructor.kip",
          "match": "\\b[A-ZĞÜŞÖÇI][\\p{L}\\p{M}]*(?:-[A-ZĞÜŞÖÇI][\\p{L}\\p{M}]*)*(?='|[\\s,;.)]|$)"
        },
        {
          "name": "constant.other.constructor.kip meta.suffix.kip",
          "match": "(?<=[A-ZĞÜŞÖÇI][\\p{L}\\p{M}]*)'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.kip",
          "match": "(?<=:\\s*)[\\p{Ll}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?='|[\\s,;.)]|$)"
        },
        {
          "name": "entity.name.type.kip meta.suffix.kip",
          "match": "(?<=:\\s*[\\p{L}\\p{M}]+)'[\\p{L}\\p{M}]+"
        },
        {
          "name": "entity.name.type.kip",
          "match": "(?<=Bir\\s+)[\\p{Ll}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.kip",
          "match": "\\b[\\p{Ll}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?='|[\\s,;.()]|$)"
        },
        {
          "name": "variable.other.kip meta.suffix.kip",
          "match": "(?<=[\\p{Ll}\\p{M}][\\p{L}\\p{M}]*)'[\\p{L}\\p{M}]+"
        }
      ]
    }
  }
}
