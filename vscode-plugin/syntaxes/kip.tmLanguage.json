{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kip",
  "scopeName": "source.kip",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.kip",
          "match": "--.*$"
        },
        {
          "name": "comment.block.kip",
          "begin": "\\{-",
          "end": "-\\}"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kip",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kip",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kip",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kip",
          "match": "\\b(ya|ya\\s+da|olsun|için|ise|değilse)\\b"
        }
      ]
    }
  }
}
