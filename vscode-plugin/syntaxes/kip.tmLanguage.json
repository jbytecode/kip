{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kip",
  "scopeName": "source.kip",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.kip",
          "begin": "\\(\\*",
          "end": "\\*\\)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kip",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kip",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.kip meta.suffix.kip",
          "match": "(?<=\")'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kip",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?(?='|[\\s,;.)]|$)"
        },
        {
          "name": "constant.numeric.kip meta.suffix.kip",
          "match": "(?<=[0-9])'[\\p{L}\\p{M}]+"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.kip",
          "match": "\\b(?:Bir|yerleşiktir|olsun)\\b"
        },
        {
          "name": "keyword.control.kip",
          "match": "\\bya\\s+da\\b"
        },
        {
          "name": "keyword.control.kip",
          "match": "\\b(?:ya|olabilir|var|için|olarak|dersek)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.kip",
          "match": "[\\p{L}\\p{M}][\\p{L}\\p{M}]*(?:-[\\p{L}\\p{M}]+)*(?:'[\\p{L}\\p{M}]+)?(?:se|sa|yse|ysa)?(?='|[\\s,;.()]|$)"
        }
      ]
    }
  }
}
